<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - School_Administrator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/design.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/School_Administrator.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>


    <header>
        <div class="logo">
            <img src="./Images/logo.png" style="width:120px"/>
        </div>

        <div class="content">
            <div>
                <input type="search" placeholder="Search" />
                <i class="bi bi-search"></i>
            </div>

            <ul>
                <li><a asp-controller="Student" asp-action="AddStudent"><i class="bi bi-person-add"></i> 
                    Add New Student</a></li>
            </ul>


        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>


    <footer>
        <div class="coopyRight">
            <p>©2023 Copyright : School Administrator</p>
        </div>

        <div>
            <img src="~/Images/logo.png" />
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
